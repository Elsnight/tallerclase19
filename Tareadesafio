#include <iostream>
#include <stdlib.h>



//LIBRERIA PARA TRABAJAR CON ARCHIVOS
#include <fstream>


using namespace std;


int main()
{
   string nombre;
   string apellido;
   string correo; 
   int edad;
   char r;
   ofstream archivoprueba;
   string nombrearchivo;
   cout<<"INGRESE EL NOMBRE DEL ARCHIVO: ";
   getline(cin,nombrearchivo);
   archivoprueba.open(nombrearchivo.c_str(),ios::app);
   do
    {
    cout<<"\tIngrese el nombre :";
    getline(cin,nombre,'\n');

    cout<<"\tIngrese el apellido: ";
    getline(cin,apellido,'\n');

    cout<<"\tIngrese correo :";
    getline(cin,correo,'\n');

    cout<<"\tIngrese la edad:";
    cin>>edad;

    archivoprueba<<nombre<<" "<<apellido<<" "<<edad<<" "<<correo<<"\n";

    cout<<"DESEA INGRESAR OTRO CONTACTO s/n";
    cin>>r;

    cin.ignore();
    }
   while(r=='s');

   
   
   archivoprueba.close();

   ifstream archivolectura("contactos.txt");
   string texto;

   while(!archivolectura.eof())
    {
        archivolectura>>nombre>>apellido>>correo>>edad;

        if(!archivolectura.eof())
            {
        getline(archivolectura,texto);
        cout<<"NOMBRE ES: "<<nombre<<"\n";
        cout<<"APELLIDO ES: "<<apellido<<"\n";
        cout<<"CORREO ES: "<<correo<<"\n";
        cout<<"EDAD ES: "<<edad<<"\n";

            }
break;
    }
   archivolectura.close();


    return 0;
}


